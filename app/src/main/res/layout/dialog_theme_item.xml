<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="?listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:paddingEnd="?android:listPreferredItemPaddingEnd"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageViewColourPrimary"
        android:layout_height="24dp"
        android:layout_width="24dp"
        tools:srcCompat="@color/md_blue_500"
        />

    <Space
        android:layout_height="0dp"
        android:layout_width="8dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageViewColourPrimaryDark"
        android:layout_height="24dp"
        android:layout_width="24dp"
        tools:srcCompat="@color/md_blue_800"
        />

    <Space
        android:layout_height="0dp"
        android:layout_width="8dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageViewColourAccent"
        android:layout_height="24dp"
        android:layout_width="24dp"
        tools:srcCompat="@color/md_blue_200"
        />

    <Space
        android:layout_height="0dp"
        android:layout_width="16dp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewColourName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="@string/md_color_name_blue"
        />

</android.support.v7.widget.LinearLayoutCompat>
